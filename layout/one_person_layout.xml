<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/main_TV_street"
        android:layout_width="127dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:textAlignment="viewStart"
        android:textColor="#121A60"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/main_TV_state"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_TV_name" />

    <TextView
        android:id="@+id/main_TV_name"
        android:layout_width="127dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textAlignment="viewStart"
        android:textColor="#121A60"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_TV_state"
        android:layout_width="154dp"
        android:layout_height="37dp"
        android:textAlignment="viewStart"
        android:textColor="#121A60"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/main_TV_street"
        app:layout_constraintTop_toBottomOf="@+id/main_Tv_gender" />

    <TextView
        android:id="@+id/main_TV_postcode"
        android:layout_width="79dp"
        android:layout_height="36dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.5"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_TV_state"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_Tv_gender"
        android:layout_width="104dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textColor="#121A60"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/main_TV_name"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>